# File name: vendingmachine.py
#:kivy 1.10.0

<CustButton@Button>:
    font_size: 24
    halign: 'right'


<VendingDisplay>:
    id: calculator
    display: credit
    padding: 20
    spacing: 20
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 40
        spacing: 10

        Label:
            text: 'Amount:'
            font_size: 24
            multiline: False
            size_hint_x: None
            size_hint_y: None
            width: 100
            height: 40

        TextInput:
            halign: 'right'
            readonly: True
            id: credit
            font_size: 24
            multiline: False
            text: root.amount
            size_hint_y: None
            height: 40

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        CustButton:
            text: root.slots[1]
        CustButton:
            text: root.slots[2]
        CustButton:
            text: root.slots[3]
        CustButton:
            text: root.slots[4]
        CustButton:
            text: root.slots[5]
        CustButton:
            text: root.slots[6]
    
