# File name: vendingremote.py
#:kivy 1.10.0

<CustButton@Button>:
    font_size: 24
    halign: 'right'


<VendingDisplay>:
    id: remote
    padding: 20
    spacing: 20
    orientation: 'vertical'

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        CustButton:
            text: root.slots[1]
            on_press: root.add_item(1)
        CustButton:
            text: root.slots[2]
            on_press: root.add_item(2)
        CustButton:
            text: root.slots[3]
            on_press: root.add_item(3)
        CustButton:
            text: root.slots[4]
            on_press: root.add_item(4)
        CustButton:
            text: root.slots[5]
            on_press: root.add_item(5)
        CustButton:
            text: root.slots[6]
            on_press: root.add_item(6)
        CustButton:
            text: 'Add Two Bits'
            on_press: root.add_two_bits()
        CustButton:
            text: 'Purchase'
            on_press: root.make_purchase()

    BoxLayout:
        height: 40
        orientation: 'horizontal'
        size_hint_y: None
        spacing: 10

        Label:
            font_size: 24
            height: 40
            multiline: False
            size_hint_y: None
            text: 'Feedback:'

        TextInput:
            allow_copy: False
            font_size: 24
            height: 40
            id: feedback
            multiline: False
            readonly: True
            size_hint_x: None
            size_hint_y: None
            text: root.feedback
            width: 240
    
